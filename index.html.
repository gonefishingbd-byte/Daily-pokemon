<body>

<div class="container">
    <div class="date" id="current-date"></div>
    <img id="pokemon-img" src="" alt="Scanning...">
    <h1 id="pokemon-name">Searching...</h1>
    <div id="types"></div>
</div>

<script>
    const START_DATE = new Date("2024-01-01").setHours(0,0,0,0);
    const TOTAL_POKE = 1025;
    const SEED = 8888; // Unique seed for your app

    function getSeededSequence(seed) {
        let ids = Array.from({length: TOTAL_POKE}, (_, i) => i + 1);
        for (let i = ids.length - 1; i > 0; i--) {
            seed = (seed * 9301 + 49297) % 233280;
            let j = Math.floor((seed / 233280) * (i + 1));
            [ids[i], ids[j]] = [ids[j], ids[i]];
        }
        return ids;
    }

    async function init() {
        const now = new Date();
        const today = new Date().setHours(0,0,0,0);
        const daysPassed = Math.floor((today - START_DATE) / (1000 * 60 * 60 * 24));
        
        const sequence = getSeededSequence(SEED);
        const dailyID = sequence[daysPassed % TOTAL_POKE];

        document.getElementById('current-date').innerText = now.toDateString();

        try {
            const res = await fetch(`https://pokeapi.co/api/v2/pokemon/${dailyID}`);
            const data = await res.json();
            
            document.getElementById('pokemon-name').innerText = data.name;
            document.getElementById('pokemon-img').src = data.sprites.other['official-artwork'].front_default;
            
            document.getElementById('types').innerHTML = data.types.map(t => 
                `<span class="type-pill ${t.type.name}">${t.type.name}</span>`
            ).join('');
        } catch (e) {
            document.getElementById('pokemon-name').innerText = "Connection Lost";
        }
    }

    init();
</script>
</body>
